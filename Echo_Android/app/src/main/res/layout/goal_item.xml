<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_corner"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/goal_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目标标题"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/goal_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目标描述"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/secondary_text_dark" />

    <TextView
        android:id="@+id/goal_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始: 2026-01-01 | 结束: 2026-01-31"
        android:textSize="14sp"
        android:textColor="@android:color/tertiary_text_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/goal_item_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_border" />

        <Button
            android:id="@+id/goal_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="14sp"
            android:background="@color/error_color"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>