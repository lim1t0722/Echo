<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.example.xfj.model.Message" />
        <variable
            name="message"
            type="com.example.xfj.model.Message" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 发送者的头像 -->
        <ImageView
            android:id="@+id/iv_sender_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="发送者头像"
            android:scaleType="centerCrop"
            android:visibility="@{message.isSent ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_message_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_message_content"
            app:srcCompat="@android:drawable/ic_delete"
            app:tint="@color/purple_500"
            app:layout_constraintEnd_toStartOf="@+id/tv_message_content" />

        <!-- 接收者的头像 -->
        <ImageView
            android:id="@+id/iv_receiver_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="接收者头像"
            android:scaleType="centerCrop"
            android:visibility="@{message.isSent ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_message_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_message_content"
            app:srcCompat="@android:drawable/ic_delete"
            app:tint="@color/green_500"
            app:layout_constraintStart_toEndOf="@+id/tv_message_content" />

        <!-- 消息内容 -->
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@{message.isSent ? @drawable/message_bubble_sent : @drawable/message_bubble_received}"
            android:maxWidth="280dp"
            android:padding="12dp"
            android:text="@{message.content}"
            android:textColor="@{message.isSent ? @color/white : @color/black}"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="这是一条消息内容" />

        <!-- 消息时间 -->
        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{message.formattedTime}"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_message_content"
            app:layout_constraintStart_toStartOf="@+id/tv_message_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_message_content"
            tools:text="12:00" />

        <!-- 消息状态 -->
        <ImageView
            android:id="@+id/iv_message_status"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:contentDescription="消息状态"
            android:visibility="@{message.isSent ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_message_time"
            app:layout_constraintStart_toEndOf="@+id/tv_message_time"
            app:layout_constraintTop_toTopOf="@+id/tv_message_time"
            app:srcCompat="@android:drawable/ic_menu_agenda"
            app:tint="@color/gray"
            tools:srcCompat="@android:drawable/ic_menu_agenda" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>